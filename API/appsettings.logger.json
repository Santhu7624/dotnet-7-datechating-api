{
  "Serilog": {
    //"Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    //"MinimumLevel": {
    //  "Default": "Information",
    //  "Override": {
    //    "Microsoft": "Warning",
    //    "System": "Warning"
    //  }
    //}
    "Using": [], //"Serilog.Sinks.Async"
    //"MinimumLevel": "Verbose",
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ], //"WithDemystifiedStackTraces", "WithmachineName", "WithProcessId", "WithThreadId"
    "WriteTo": [
      { "Name": "Console" },

      {
        "Name": "File",
        "Args": {
          "path": "Logs\\info-log-.log",
          "RestrictedToMinimumLevel": "Information",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] [{SourceContext}] [{EventId}] {Message}{NewLine}{Exception}",
          "fileSizeLimitBytes": 50000000,
          "rollOnFileSizeLimit": true,
          "rollingInterval": "Day",
          "retainedFileCountLimit": 31
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs\\error-log-.log",
          "RestrictedToMinimumLevel": "Error",
          "fileSizeLimitBytes": 50000000,
          "rollOnFileSizeLimit": true,
          "rollingInterval": "Day",
          "retainedFileCountLimit": 31
        }
      }
      /*  JSOn FORMAT */
      /*{
        "Name": "File",
        "Args": {
          "path": "_logs\\info-log.json",
          "RestrictedToMinimumLevel": "Information",
          "fileSizeLimitBytes": 50000000,
          "retainedFileCountLimit": 3,
          "rollOnFileSizeLimit": true
        }
      }*/
    ]
  }
}
